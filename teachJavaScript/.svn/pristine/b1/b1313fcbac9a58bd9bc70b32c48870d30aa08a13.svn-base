var onest= 0; 
var twost= 0;
var trest= 0;
var forst= 0;
//---------- 순서를 고르는 곳
function chos(d) {

		var orcar = document.getElementById(d);
		alert(d);
		if(onest==0){orcar.innerHTML = "1st"; onest+=d; alert(onest);}else
		if(twost==0){orcar.innerHTML = "2st"; twost+=d;}else
		if(trest==0){orcar.innerHTML = "3st"; trest+=d;}else
		if(forst==0){orcar.innerHTML = "4st"; forst+=d;};
}
function clear() {
	var onest= 0; 
	var twost= 0;
	var trest= 0;
	var forst= 0;
}
</script>
