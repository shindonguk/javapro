<html>
<head>
<title>메인 메뉴</title>

<style>
.floater   { float: left; height: 30%; margin-bottom: -120px;}
.content   { clear:both; }
.selectBtn { padding:10px; border-radius:7px; font-size:14px;
             color: #fff; text-align:center; background:#0066ff}
.logoutBtn { padding:10px; border-radius:7px; font-size:12px;
             color: #fff; text-align:center; background:#0066ff}
</style>
<script>

const ID       = localStorage.getItem('currentId'); // 현재 접속한 아이디
const rankList = ["브론즈", "실버", "골드", "다이아", "플래티넘", "챌린저"]; //랭크 이름

//유저 정보 읽어오기
var userData     = localStorage.getItem(ID).split(",");
var rank         = userData[0];
var best_time    = userData[1];
var current_skin = userData[2];  


//이동 메서드
function move(page) {
//page값은 'training', 'challenge' 의 형식으로 옵니다.
    var moveURL = page + "Mode.html";
    document.location.href=moveURL;
}


//로그아웃 메서드
function logout() {
    if(confirm("로그아웃 하시겠습니까?")) {
        localStorage.removeItem('currentId');
        document.location.href="login.html";
    }
}



//화면로딩 후 로컬저장소에서 아이디 불러오기
window.onload=function() {
    document.getElementById("userIdView").innerHTML = "<h2>"+ID+"</h2>";
     document.getElementById("rankView").innerHTML  = "<br><h3>현재 랭크 : "+rankList[rank]+"</h3>";
}

/*localStorage 사용 예제
alert(localStorage.test);
alert(localStorage.getItem('test2'));
*/
</script>

</head>
<body>

<div align="right">
    <input type="button" class="logoutBtn" value="로그아웃" onclick="logout();" style="width:100px; height:40px;">
</div>
<!--로그아웃 버튼-->

<div class="floater"></div>
<!--화면 중앙 맞추기용-->

<div class="content" style="text-align:center;">
    <h5>사용자 아이디</h5>
    <span id="userIdView"></span>
    <span id="rankView"></span>
    <br><br>
<!--연습하기 버튼-->
    <input type="button" class="selectBtn" id="training" value="연습하기" onclick="move(this.id)" style="width:180px; height:70px;">
    <br><br><br><br>
<!--챌린지모드 버튼-->
    <input type="button" class="selectBtn" id="challenge" value="챌린지모드" onclick="move(this.id)" style="width:180px; height:70px;">
</div>

</form>


</body>
</html>