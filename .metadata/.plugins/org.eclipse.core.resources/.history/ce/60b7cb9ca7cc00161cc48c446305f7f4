package javastart.A05_loop;

public class A01_for {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		/*
		 * for(초기값;한계값;증감){
		 * 		반복처리할 구문
		 * }
		 */
		for(int a=1;a<10;a++){
			String b = "*";
			for(int c=1;c<a;c++){
				System.out.print(b);
			}System.out.println();
		}
		/*
		 * 구구단 처리
		 * 2*1 =2
		 * 
		 */
		/*int a = Integer.parseInt(args[0]);
		for(int b=1;b<10;b++){
			System.out.println("a*b = "+(a*b));
		}*/
		/*
		 * 1단계
		 * 1> 5~20까지 1단위로 증가시켜 출력하세요
		 * 2> 30~ 100까지 5단위로 증가시켜 출력하세요
		 * 3> 1000~ 90까지 감소시켜 2단위로 출력하세요
		 * 
		 * 2단계
		 * */
		System.out.println("1번");
		for(int a=5;a<=20;a++){
			System.out.println(a);
		}
		System.out.println("1번");
		for(int a=30;a<=100;a+=5){
			System.out.println(a);
		}
		System.out.println("1번");
		for(int a=5;a<=20;a++){
			System.out.println(a);
		}
	}

}
