//email 도메인 처리
function domain1(val1, doname1) {
	if(val1.value == "frwr"){
		doname1.removeAttribute('readonly'); //속성 지우기
		doname1.value == "";
		doname1.focus();
	}else{
		doname1.value = val1.value;	
		//값을 수정할 수 없게 처리
		// input 객체의 roadonly)(읽기전용)
		doname1.setAttribute('readonly', 'readonly')
		//                  값			속성
	}
} 
