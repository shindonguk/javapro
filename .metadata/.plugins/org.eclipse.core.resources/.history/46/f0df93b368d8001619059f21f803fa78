package javastart.D01_inherit;

abstract interface Flyway{
	// 인터페이스는 앞에 abstract가 항상 붙어있다.
	// 생략가능.
	void fly();
}
//인터페이스를 상속 받는 것은 implements
class CountryFlying implements Flyway{

	@Override
	public void fly() {
		// TODO Auto-generated method stub
		System.out.println("우리 동네를 나르다!!");
	}
	
}
class mz{
	private String name;
	private Flyway flyway;
	public mz(){
		name="mz";
	}
	//실제 날개를 받을 수 있는 연결고기(interface)장착
	public void setFlyway(Flyway flyway){
		this.flyway=flyway;
	}
	public void flying(){
		System.out.println(name+"가");
		//인터페이스를 상속받은 실제 객체가 할당이 되면
		if(flyway!=null){
			flyway.fly();
		}else{
			System.out.println("날개 장착 실패");
		}
		
	}
}
public class C01_interface {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		mz mz1 = new mz();
		mz1.flying();
		//flyway 상속받은 하위 객체인 CountryFlying
		CountryFlying flying = new CountryFlying();
		
		mz1.setFlyway(flying);
		mz1.flying();
	}

}
